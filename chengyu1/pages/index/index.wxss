/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.index-body{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.index-body image{
  width: 100%;
  height: 100%;
}
.start-btn{
  width: 366rpx;
  height: 134rpx;
  position: fixed;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  bottom: 468rpx;
}
.get-btn{
  width: 366rpx;
  height: 134rpx;
  position: fixed;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  bottom: 468rpx;
  z-index: 99;
  opacity: 0;
}
.start-btn image{
  width: 366rpx;
  height: 134rpx;
}
.select-btn{
  width: 366rpx;
  height: 134rpx;
  position: fixed;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  bottom: 388rpx;
}
.select-btn image{
  width: 366rpx;
  height: 134rpx;
}
.give-btn{
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  position: fixed;
  left: 214rpx;
  bottom: 50rpx;   
}
.givesure-btn{
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  position: fixed;
  left: 214rpx;
  bottom: 50rpx; 
  z-index: 99;
  opacity: 0;
}
.give-btn image{
   width: 125rpx;
  height: 125rpx;
}
.share-btn{
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  position: fixed;
  right: 214rpx;
  bottom: 50rpx;
}
.share-btn image{
   width: 125rpx;
  height: 125rpx;
}
.share-true{
  width: 125rpx;
  height: 125rpx;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0; 
}
/*打赏弹窗  */
.give-money{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top:0;
  overflow: hidden;
}
.give-view{
  width: 710rpx;
  height: 774rpx;
  position: absolute;
  left: 0;
  top:0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.give-view image{
  width: 710rpx;
  height: 774rpx;
}
.no-pay{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  line-height: 774rpx;
  color: #ffffff;
  text-align: center;
}
/*打赏选项  */
.option-box{
  width: 100%;
  height: auto;
  position: absolute;
  left: 0;
  top: 0;
  padding: 190rpx 30rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.option-item{
  width: 196rpx;
  height: 227rpx;
  margin-bottom: 66rpx;
  position: relative;
}
.option-item image{
  width: 196rpx;
  height: 227rpx;
}
.money-item{
  width: 196rpx;
  height: 72rpx;
  position: absolute;
  left: 0;
  bottom: -36rpx;
}
.money-item image{
  width: 196rpx;
  height: 72rpx;
}
/*关闭按钮  */
.close-btn{
  width: 104rpx;
  height: 106rpx;
  position: absolute;
  top: -16rpx;
  right: 0;
  z-index: 99;
}
.close-btn image{
  width: 100rpx;
  height: 108rpx;
}
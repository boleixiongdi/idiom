/* pages/game/game.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  font-family: "楷体";
}
/*金币显示区域  */
.game-icon{
  width: 190rpx;
  height: 86rpx;
  position: fixed;
  right: 40rpx;
  top:80rpx;
}
.add-icon{
  width: 86rpx;
  height: 86rpx;
  position: absolute;
  right: 0;
  top:0;
  opacity: 0;
}
.game-icon image{
  width: 190rpx;
  height: 86rpx;
}
.page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.icon-num{
  position: absolute;
  top: 31rpx;
  right: 56rpx;
  font-size: 18rpx;
  color: #ffffff;
}
/*游戏区域  */
.game-body{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.game-body image{
  width: 100%;
  height: 100%;
}
.game-area{
  width: 100%;
  height: auto;
  position: absolute;
  top: 332rpx;
}
/*选中字体显示区域  */
.select-area{
  padding: 0 0 18rpx 190rpx;
  position: relative;
}
.select-area image{
  width: 89rpx;
  height: 89rpx;
  margin-right: 6rpx;
}
.select-font{
  position: absolute;
  top:0;
  left: 0;
  padding: 0 0 24rpx 190rpx;
}
.selet-item{
  width: 89rpx;
  height: 89rpx;
  text-align: center;
  float: left;
  margin-right: 6rpx;
  line-height: 89rpx;
  color: #ffffff;
}
/*游戏界面区域  */
.game-box{
  padding: 0 86rpx;
  position: relative;
}
.game-box image{
  width: 581rpx;
  height: 581rpx;
}
.game-stone{
  width: 563rpx;
  height: 563rpx;
  padding: 10rpx;
  position: absolute;
  left: 86rpx;
  top: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.stone-item{
  width:89rpx;
  height: 89rpx; 
  position: relative;
}
.stone-font{
  width:89rpx;
  height: 89rpx; 
  position: absolute;
  top: 0;
  left: 0;
  font-size: 48rpx;
  color: #ffffff;
  text-align: center;
  line-height: 89rpx;
}
.stone-item image{
  width:89rpx;
  height: 89rpx; 
}
.stone-item .click-img{
   width:115rpx;
  height:148rpx;
  position: absolute;
  left: -12rpx;
  bottom: -20rpx;
}
.font-sure{
  width:89rpx;
  height: 89rpx; 
}
/*当前关卡数 */
.pass-num{
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  left: 68rpx;
  top:96rpx;
  font-size: 72rpx;
  font-weight: 700;
  line-height: 150rpx;
  text-align: center;
  color: #ffffff;
  /* background: rgba(0, 0, 0, 0.1); */
}
/*提示按钮  */
.game-hint{
  width: 89rpx;
  height: 108rpx;
  position: fixed;
  right: 46rpx;
  bottom: 152rpx;
}
.game-hint image{
  width: 89rpx;
  height: 108rpx;
}
.game-help{
  width: 101rpx;
  height: 105rpx;
  position: fixed;
  right: 36rpx;
  bottom: 36rpx;
}
.game-help image{
  width: 101rpx;
  height: 105rpx;
}
.help-btn{
  width: 101rpx;
  height: 105rpx;
  position: absolute;
  left: 0;
  top:0;
  opacity: 0;
}
/*提示区域  */
.hint-body{
  width: 375rpx;
  height: 104rpx;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
  padding: 22rpx 23rpx 20rpx 73rpx;
  position: fixed;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  bottom: -138rpx; 
  /* bottom: 10rpx;  */
}
.hint-body image{
  width: 118rpx;
  height: 118rpx;
  position: absolute;
  left: -50rpx;
  top:-34rpx;
}
.hint-con{
  width: 100%;
  height: 100%;
  color: #ffffff;
  font-size: 24rpx;
  overflow: auto;
}
/*下一关界面  */
.next-body{
   width: 100%;
   height: 100%;
   background: rgba(0, 0, 0, 0.5);
   position: fixed;
   left: 0;
   top: 0;
   z-index: 99;
}
.next-view{
  width: 710rpx;
  height: 594rpx;
  position: absolute;
  top:0;
  bottom:0;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  margin-top:auto;
  margin-bottom: auto;
}
.next-view .next-img{
  width: 710rpx;
  height: 594rpx;
}
.next-btn{
  width: 270rpx;
  height: 100rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  bottom: 22rpx;
}
.next-btn image{
  width: 270rpx;
  height: 100rpx;
}
.close-btn{
  width: 104rpx;
  height: 106rpx;
  position: absolute;
  top: -16rpx;
  right: 0;
}
.close-btn image{
  width: 100rpx;
  height: 108rpx;
}
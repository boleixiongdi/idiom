/* pages/list/list.wxss */
/*背景  */
page{
  width: 100%;
  height: 100%;
}
.list-body{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  top: 0;
}
.list-body image{
  width: 100%;
  height: 100%;
}
/*前三名  */
.list-con{
  width: 100%;
  height: auto;
  position: absolute;
  left: 0;
  top:0;
}
.top-body{
  width: 100%;
  height: 314rpx;
  background: rgba(29,51,110,0.3);
  box-sizing: border-box;
  padding: 30rpx 78rpx 0;
  display: flex;
  justify-content: space-between;
}
.top-two{
  width: 136rpx;
  height: 172rpx;
  margin-top: 20rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.top-two .two-img{
  width: 136rpx;
  height: 172rpx;
  position: absolute;
  left: 0;
  right: 0;
  z-index: 99;
}
.user-photo{
   width: 120rpx;
   height: 120rpx;
   border-radius: 50%;
   overflow: hidden;
   position: absolute;
   top: 38rpx;
   left: 8rpx;
}
.user-photo image{
  width: 120rpx;
  height: 120rpx;
}
.user-nick{
  color: #e2e2e2;
  font-size: 28rpx;
  text-align: center;
}
.top-one{
  width: 167rpx;
  height: 192rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.top-one .one-img{
  width: 167rpx;
  height: 192rpx;
  position: absolute;
  left: 0;
  right: 0;
  z-index: 99;
}
.one-nick{
  color: #fdde09;
  font-size: 28rpx;
  text-align: center;
}
.two-nick{
  color: #e29549;
  font-size: 28rpx;
  text-align: center;
}
.one-photo{
   width: 136rpx;
   height: 136rpx;
   border-radius: 50%;
   overflow: hidden;
   position: absolute;
   top: 43rpx;
   left: 15rpx;
}
.one-photo image{
    width: 136rpx;
    height: 136rpx;
    border-radius: 50%;
}
/*剩余排行  */
.rest-list{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 44rpx 30rpx 110rpx;
}
.rest-item{
  width: 100%;
  height: 104rpx;
  margin-bottom: 40rpx;
  /* background: red; */
}
.rest-num{
  width: auto;
  height: 104rpx;
  padding-right: 19rpx;
  color: #ffffff;
  font-size: 20rpx;
  line-height: 104rpx;
  float: left;
}
.rest-photo{
  width: 104rpx;
  height: 104rpx;
  background: #ffffff;
  border-radius: 50%;
  float: left;
}
.rest-photo image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 2rpx;
}
.rest-nick{
  float: left;
  padding-left: 19rpx;
  line-height: 104rpx;
  color: #ffffff;
  font-size: 32rpx;
}
.rest-pass{
  float: right;
  width: 124rpx;
  height: auto;
  padding: 37rpx 0 0;
  display: flex;
  justify-content: space-between;
}
.rest-pass image{
  width: 58rpx;
  height: 40rpx;
}
.rest-pass text{
  color: #ffffff;
  font-size: 22rpx;
  line-height: 22rpx;
  padding-top: 7rpx;
}
/*  */
.self-start{
  width: 100%;
  height: auto;
  position: fixed;
  left: 0;
  bottom: 0;
  /* padding-bottom: 18rpx; */
}
.self-start .bottom-back{
  display: block;
  width: 100%;
  height: 148rpx;
}
.bottom-line{
  width: 100%;
  height: 6rpx;
  background: rgba(226,226,226,0.3);
}
.self-item{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 104rpx;
  position: absolute;
  left: 0;
  top: 26rpx;
}
.start-game{
  float: right;
  width: 177rpx;
  height: 64rpx;
  margin-top: 24rpx;
}
.share-btn{
  width: 177rpx;
  height: 64rpx;
  position: absolute;
  right: 30rpx;
  top:  24rpx;
  opacity: 0;
}
.start-game image{
  width: 177rpx;
  height: 64rpx;
}